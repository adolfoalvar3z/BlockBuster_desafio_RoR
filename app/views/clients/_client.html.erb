<div id="<%= dom_id client %>">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Cliente: <%= client.id %></h4>
      <h4 class="card-title">Edad Cliente: <%= client.age %></h4>
      <p class="card-text">
        Peliculas arrendadas:
        <% if client.movie.nil?%>
          No posee pelicula en arriendo
        <% else %>
          <%= client.movie.name %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="btn-group">
    <td><%= link_to "Editar este cliente", edit_client_path(client), class: "btn btn-warning btn-sm" %></td>
    <td><%= button_to "Destroy this client", @client, method: :delete, class: "btn btn-danger btn-sm" %></td>
  </div>
</div>
